@model CargoMateSolution.Models.Customer.CustomerViewModel
@section header{
    <link href="~/Content/social-auth-buttons.css" rel="stylesheet" type="text/css" />
    <style>
        .awe-search-tabs-2 {
            left: auto;
        }

        .login-register-page__content .login-register-link {
            background-color: rgba(255, 246, 246, 0.8);
            color: #262626;
        }

        .login-register-page__content {
            max-width: unset;
        }

        .intl-tel-input {
            position: relative;
            display: inline !important;
        }

        .awe-parallax {
            color: #262626;
        }

        .intl-tel-input .selected-flag {
            margin-top: 20px;
        }
    </style>
    <link href="~/AppLayout/global/plugins/InternationalTelephoneInput/css/intlTelInput.css" rel="stylesheet" />
}
<section class="bg-img login-page-demo reg-img">
    <div class="awe-overlay"></div>
    <div class="container">
    </div>
</section>

<section class="awe-parallax login-page-demo login-pg cvr-padding-top col-xs-12">
    <div class="awe-overlay"></div>
    <div class="container">
        <div class="login-register-page__content col-xs-12">

            
            @*<div class="tab-content">
                <div id="register-customer" class="tab-pane fade in active">*@
                    @using (Ajax.BeginForm("Register", "Customer", null, new AjaxOptions { HttpMethod = "POST" }, new { @class = "form-actual", id = "CustomerRegistrationForm" }))
                    {
                        <div class="row">

                            <div class="col-xs-12">
                                <div class="col-xs-12">
                                    <h1 class="text-left" style="font-size: 2em; font-family: 'Open Sans', arial, sans-serif; font-weight: 700; margin-bottom: 15px;">Complete Your Account Details</h1>
                                    <p style="color: #706F6F; margin-bottom: 40px; font-size: 1.1em; width: 100%; margin-bottom: 50px">
                                        Please Complete the missing details to get better services.
                                    </p>
                                </div>
                            </div>
                           
                            <div class="col-xs-12 px-0 d-flex">
                                <div class="col-xs-12 col-sm-6">
                                   
                                    <div class="form-item mb-2 d-inline-block">
                                       
                                        @Html.HiddenFor(model=>model.Id)

                                        @Html.LabelFor(model => model.Name, new {@class = "col-xs-12 col-sm-4"})

                                        <div class="col-xs-12 col-sm-8">
                                            @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control"}})
                                            @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
                                        </div>
                                    </div>
                                    <div class="form-item mb-2 d-inline-block">
                                        @Html.LabelFor(model => model.EmailAddress, new { @class = "col-xs-12 col-sm-4" })

                                        <div class="col-xs-12 col-sm-8">
                                            @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-item mb-2 d-inline-block">
                                        @Html.LabelFor(model => model.PhoneNumber, new { @class = "col-xs-12 col-sm-4" })
                                        <div class="col-xs-12 col-sm-8">
                                            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-item mb-2 d-inline-block">
                                        @Html.LabelFor(model => model.ImageUrl, new {@class = "col-xs-12 col-sm-4"})
                                        <div class="col-xs-12 col-sm-8">
                                            @Html.EditorFor(model => model.ImageUrl, new {htmlAttributes = new {@class = "form-control", type = "file"}})
                                            @Html.ValidationMessageFor(model => model.ImageUrl, "", new {@class = "text-danger"})
                                        </div>
                                    </div>
                                    <div class="form-item mb-2 d-inline-block">
                                        <label class="col-xs-12 col-sm-4"> Part of a Company ?</label>
             
                                        <div class="col-xs-12 col-sm-8">
                                            @Html.DropDownList("IsCompany", new List<SelectListItem> { new SelectListItem { Text = "No", Value = "false" }, new SelectListItem { Text = "Yes", Value = "true" } }, new { @class = "form-control", id = "IsCompany" })
                                        </div>
                                    </div>
                                </div>


                                <div class="col-xs-12 col-sm-6">

                                    <div class="col-xs-12 px-0">

                                        <div class="form-item mb-2 d-inline-block">
                                            @Html.LabelFor(model => model.DateOfBirth, new { @class = "col-xs-12 col-sm-4" })
                                            <div class="col-xs-12 col-sm-8">
                                                @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-item mb-2 d-inline-block">
                                            @Html.LabelFor(model => model.Gender, new { @class = "col-xs-12 col-sm-4" })
                                            <div class="col-xs-12 col-sm-8">
                                                @Html.EditorFor(model => model.Gender, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-item mb-2 d-inline-block">
                                            @Html.LabelFor(model => model.Address, new {@class = "col-xs-12 col-sm-4"})
                                            <div class="col-xs-12 col-sm-8">
                                                @Html.EditorFor(model => model.Address, new {htmlAttributes = new {@class = "form-control"}})
                                                @Html.ValidationMessageFor(model => model.Address, "", new {@class = "text-danger"})
                                            </div>
                                        </div>

                                        <div class="form-item mb-2 d-inline-block" id="div-Company" hidden="hidden">
                                            @Html.LabelFor(model => model.CompanyId, new { @class = "col-xs-12 col-sm-4" })
  
                                            <div class="col-xs-12 col-sm-8">
                                                @Html.DropDownListFor(model => model.CompanyId, new SelectList(string.Empty, "Value", "Text"), "Please Select Your Company", new { @class = "form-control" })
                                                <a href="@Url.Action("Create","Company")">Name Not Exists ! Add Now</a>
                                                @Html.ValidationMessageFor(model => model.CompanyId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        
                                        <div class="col-xs-12 form-actions">
                                            <label class="col-xs-12 col-sm-4"></label>
                                            <div class="col-xs-12 col-sm-8">
                                                <input type="submit" value="Update account info">
                                            </div>

                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                    }
                @*</div>
            </div>*@
        </div>
    </div>
</section>
@section Footer{

    <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyC88G_-I2GZl8sVDs95qoxcuqBy9_q36nQ&force=lite"></script>

    <script type="text/javascript" src="~/Scripts/jquery.placepicker.min.js"></script>

    <script src="~/AppLayout/global/plugins/InternationalTelephoneInput/js/intlTelInput.js"></script>
    <script src="~/Scripts/CargoMateClientAppScripts/Customers/Customers.js"></script>
    <script>
        Customers.InitEvents();
    </script>
}