@model CargoMateSolution.Models.Company.CompanyViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header{
    <style>
        .awe-search-tabs-2 {
            left: auto;
        }

        .login-register-page__content .login-register-link {
            background-color: rgba(255, 246, 246, 0.8);
            color: #262626;
        }

        .login-register-page__content {
            max-width: unset;
        }

        .intl-tel-input {
            position: relative;
            display: inline !important;
        }

        .awe-parallax {
            color: #262626;
        }

        .intl-tel-input .selected-flag {
            margin-top: 20px;
        }
    </style>
    <link href="~/AppLayout/global/plugins/InternationalTelephoneInput/css/intlTelInput.css" rel="stylesheet" />
}
<section class="bg-img login-page-demo reg-img">
    <div class="awe-overlay"></div>
    <div class="container">
    </div>
</section>

<section class="awe-parallax login-page-demo login-pg cvr-padding-top col-xs-12">
    <div class="awe-overlay"></div>
    <div class="container">
        <div class="login-register-page__content col-xs-12">


            @using (Ajax.BeginForm("Create", null, new AjaxOptions { HttpMethod = "POST", OnSuccess = "Company.Callbacks.InsertSuccess" }, new { enctype = "multipart/form-data", @class = "form-actual", id = "CompanyForm" }))
            {
                <div class="row">

                    <div class="col-xs-12">
                        <div class="col-xs-12">
                            <h1 class="text-left" style="font-size: 2em; font-family: 'Open Sans', arial, sans-serif; font-weight: 700; margin-bottom: 15px;">Company Registration</h1>
                            <p style="color: #706F6F; margin-bottom: 40px; font-size: 1.1em; width: 100%; margin-bottom: 50px">
                                Please register your company to get better services.
                            </p>
                        </div>
                    </div>
                    <div class="col-xs-12 px-0 d-flex">


                        <div class="col-xs-12 col-sm-6">
                            <div class="form-item mb-2 d-inline-block">
                                @Html.LabelFor(model => model.Name, new { @class = "col-xs-12 col-sm-4" })
                                <div class="col-xs-12 col-sm-8">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-item mb-2 d-inline-block">
                                @Html.LabelFor(model => model.CrNumber, new { @class = "col-xs-12 col-sm-4" })
                                <div class="col-xs-12 col-sm-8">
                                    @Html.EditorFor(model => model.CrNumber, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CrNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-item mb-2 d-inline-block">
                                @Html.LabelFor(model => model.PhoneNumber, new { @class = "col-xs-12 col-sm-4" })
                                <div class="col-xs-12 col-sm-8">
                                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-item mb-2 d-inline-block">
                                @Html.LabelFor(model => model.Logo, new { @class = "col-xs-12 col-sm-4" })
                                <div class="col-xs-12 col-sm-8">
                                    @Html.Editor("CompanyLogo", new { htmlAttributes = new { @class = "form-control", type = "file" } })
                                    @Html.ValidationMessageFor(model => model.Logo, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.Logo)
                                </div>
                            </div>
                            <div class="form-item mb-2 d-inline-block">
                                @Html.LabelFor(model => model.WebSiteUrl, new { @class = "col-xs-12 col-sm-4" })
                                <div class="col-xs-12 col-sm-8">
                                    @Html.EditorFor(model => model.WebSiteUrl, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.WebSiteUrl, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-item mb-2 d-inline-block">
                                @Html.LabelFor(model => model.CountryName, new { @class = "col-xs-12 col-sm-4" })
                                <div class="col-xs-12 col-sm-8">
                                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            @Html.HiddenFor(model => model.CountryName)
                            @Html.HiddenFor(model => model.Location)
                        </div>

                    </div>
                    <div class="col-sm-10 col-sm-offset-2">
                        <div id="googleMap" style="width: 100%; height: 200px">

                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-item">
                            <div class="form-actions">
                                <input type="submit" value="Register Company">
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</section>
@section Footer{

    <script src="~/Scripts/CargoMateClientAppScripts/Company/MapSetup.js"></script>
    <script src="~/Scripts/CargoMateClientAppScripts/Company/Company.js"></script>

    <script src="~/AppLayout/global/plugins/InternationalTelephoneInput/js/intlTelInput.js"></script>

    <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyC88G_-I2GZl8sVDs95qoxcuqBy9_q36nQ&force=lite&callback=CompanyMap.initEvents"></script>

    <script type="text/javascript" src="~/Scripts/jquery.placepicker.min.js"></script>

    <script>

        Company.initEvents();

    </script>


}

