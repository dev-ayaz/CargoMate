@model CargoMateSolution.Areas.Administration.Models.Vehicle.VehicleModel

@{
    Layout = null;
}
@Html.HiddenFor(model=>model.Id)
<div class="form-group">
    @Html.LabelFor(model => model.CultureCode, htmlAttributes: new {@class = "control-label col-md-3"})
    <div class="col-md-9">
        @Html.DropDownListFor(model => model.CultureCode, new SelectList(Model.Languges, "Value", "Text", @Model.CultureCode), "Select Language", new {@class = "form-control"})
        @Html.ValidationMessageFor(model => model.CultureCode, "", new {@class = "text-danger"})
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.MakeId, htmlAttributes: new { @class = "control-label col-md-3" })
    <div class="col-md-9">
        @Html.DropDownListFor(model => model.MakeId, new SelectList(Model.MakeList, "Value", "Text", @Model.CultureCode), "Select Make", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.MakeId, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3" })
    <div class="col-md-9">
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.ImageUrl, htmlAttributes: new { @class = "control-label col-md-3" })
    <div class="col-md-9">
        @if (!String.IsNullOrEmpty(Model.ImageUrl))
        {
            <img alt="" class="img-circle" style="width: 100px;" src="@Model.ImageUrl">
        }
        @Html.EditorFor(model => model.ImageUrl, new { htmlAttributes = new { @class = "form-control", type = "file" } })
        @Html.ValidationMessageFor(model => model.ImageUrl, "", new { @class = "text-danger" })
    </div>
</div>
