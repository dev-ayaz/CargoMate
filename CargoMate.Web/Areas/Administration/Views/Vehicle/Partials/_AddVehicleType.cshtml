@model CargoMateSolution.Areas.Administration.Models.Vehicle.VehicleTypeViewModel

@{ Layout = null;}
@Html.HiddenFor(model=>model.Id)
<div class="form-group">
    @Html.LabelFor(model => model.CultureCode, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.CultureCode, new SelectList(Model.Languges, "Value", "Text", @Model.CultureCode), "Select Language", new {@class = "form-control"})
        @Html.ValidationMessageFor(model => model.CultureCode, "", new {@class = "text-danger"})
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Descreption, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.Descreption, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Descreption, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.ImageUrl, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @if(!String.IsNullOrEmpty(Model.ImageUrl)){
        <img alt="" class="img-circle" style="width: 100px;" src="@Model.ImageUrl">
        }
        <input type="file" name="ImageUrl"  class="form-control"/>
        @Html.ValidationMessageFor(model => model.ImageUrl, "", new {@class = "text-danger"})
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.IsEquipment, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.CheckBoxFor(model => model.IsEquipment, new {Value=true })
        @Html.ValidationMessageFor(model => model.IsEquipment, "", new { @class = "text-danger" })
    </div>
</div>

